---
interface Video {
  id: string;
  title: string;
}

const videos: Video[] = [
  {
    id: "ZoDM7zJEvE0",
    title: "Drugje",
  },
  {
    id: "2Y-ZYdAuKdQ",
    title: "Ne vid'm ure",
  },
];
---

<section id="videospoti" class="py-24 md:py-32 bg-surface">
  <div class="max-w-6xl mx-auto px-6">
    <!-- Naslov -->
    <div class="text-center mb-16 fade-in">
      <p class="text-accent tracking-[0.3em] uppercase text-sm mb-3 font-semibold">
        Videospoti
      </p>
      <h2 class="reveal-text font-serif text-4xl md:text-5xl font-bold" data-reveal>
        <span class="word"><span class="word-inner">Glasba</span></span>
        <span class="word"><span class="word-inner" style="transition-delay: 0.1s">v</span></span>
        <span class="word"><span class="word-inner" style="transition-delay: 0.2s">slikah</span></span>
      </h2>
    </div>

    <!-- Video grid - 2 velika videa -->
    <div class="grid md:grid-cols-2 gap-10">
      {
        videos.map((video) => (
          <div class="fade-in group">
            <div class="aspect-video bg-bg rounded-sm overflow-hidden shadow-xl">
              <iframe
                src={`https://www.youtube.com/embed/${video.id}`}
                title={video.title}
                class="w-full h-full"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen
                loading="lazy"
              />
            </div>
            <h3 class="mt-5 font-serif text-2xl text-text group-hover:text-accent transition-colors">
              {video.title}
            </h3>
          </div>
        ))
      }
    </div>
  </div>
</section>
