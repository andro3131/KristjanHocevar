---
import { loadContent } from "../utils/content";
import type { PonudbaContent } from "../types/content";

const ponudba = loadContent<PonudbaContent>("ponudba");
---

<section id="ponudba" class="py-24 md:py-32 bg-surface">
  <div class="max-w-6xl mx-auto px-6">
    <!-- Naslov -->
    <div class="text-center mb-16 fade-in">
      <p class="text-accent tracking-[0.3em] uppercase text-sm mb-3 font-semibold">
        {ponudba.sectionLabel}
      </p>
      <h2 class="reveal-text font-serif text-4xl md:text-5xl font-bold" data-reveal>
        {ponudba.title.map((word, i) => (
          <><span class="word"><span class="word-inner" style={i > 0 ? `transition-delay: ${i * 0.15}s` : ""}>{word}</span></span>{" "}</>
        ))}
      </h2>
    </div>

    <div class="grid md:grid-cols-2 gap-12 md:gap-16 items-center">
      <!-- Besedilo -->
      <div class="fade-in">
        <div class="space-y-5 text-muted leading-relaxed">
          {ponudba.paragraphs.map((p) => (
            <p>{p}</p>
          ))}
        </div>
        <div class="mt-8">
          <a
            href={ponudba.ctaLink}
            class="inline-flex items-center gap-2 text-accent hover:text-accent/80 transition-colors font-semibold group"
          >
            {ponudba.ctaText}
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-4 h-4 transition-transform group-hover:translate-x-1"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Slika -->
      {ponudba.image && (
        <div class="fade-in">
          <div class="relative">
            <img
              src={ponudba.image}
              alt={ponudba.imageAlt}
              class="w-full rounded-sm shadow-2xl"
              loading="lazy"
            />
            <div class="absolute -bottom-4 -right-4 w-full h-full border-2 border-accent/30 rounded-sm -z-10"></div>
          </div>
        </div>
      )}
    </div>
  </div>
</section>
