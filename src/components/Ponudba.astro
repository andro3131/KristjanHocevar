---
import { loadContent } from "../utils/content";
import type { PonudbaContent } from "../types/content";

const ponudba = loadContent<PonudbaContent>("ponudba");
---

<section id="ponudba" class="py-24 md:py-32">
  <div class="max-w-6xl mx-auto px-6">
    <!-- Naslov -->
    <div class="text-center mb-16 fade-in">
      <p class="text-accent tracking-[0.3em] uppercase text-sm mb-3 font-semibold">
        {ponudba.sectionLabel}
      </p>
      <h2 class="reveal-text font-serif text-4xl md:text-5xl font-bold" data-reveal>
        {ponudba.title.map((word, i) => (
          <span class="word"><span class="word-inner" style={i > 0 ? `transition-delay: ${i * 0.15}s` : ""}>{word}</span></span>
        ))}
      </h2>
      <p class="mt-6 text-muted max-w-2xl mx-auto leading-relaxed text-lg">
        {ponudba.intro}
      </p>
    </div>

    <!-- Kartici ponudbe -->
    <div class="grid md:grid-cols-2 gap-6 md:gap-8 mb-12">
      {ponudba.offers.map((offer) => (
        <div class="fade-in group relative bg-surface border border-text/8 rounded-sm p-8 md:p-10 hover:border-accent/30 transition-all duration-500">
          <!-- Ikona -->
          <div class="w-14 h-14 rounded-full bg-accent/10 flex items-center justify-center mb-6">
            {offer.icon === "acoustic" ? (
              <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="m9 9 10.5-3m0 6.553v3.75a2.25 2.25 0 0 1-1.632 2.163l-1.32.377a1.803 1.803 0 1 1-.99-3.467l2.31-.66a2.25 2.25 0 0 0 1.632-2.163Zm0 0V2.25L9 5.25v10.303m0 0v3.75a2.25 2.25 0 0 1-1.632 2.163l-1.32.377a1.803 1.803 0 0 1-.99-3.467l2.31-.66A2.25 2.25 0 0 0 9 15.553Z" />
              </svg>
            ) : (
              <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 0 0 3.741-.479 3 3 0 0 0-4.682-2.72m.94 3.198.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0 1 12 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 0 1 6 18.719m12 0a5.971 5.971 0 0 0-.941-3.197m0 0A5.995 5.995 0 0 0 12 12.75a5.995 5.995 0 0 0-5.058 2.772m0 0a3 3 0 0 0-4.681 2.72 8.986 8.986 0 0 0 3.74.477m.94-3.197a5.971 5.971 0 0 0-.94 3.197M15 6.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm6 3a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Zm-13.5 0a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Z" />
              </svg>
            )}
          </div>

          <!-- Vsebina -->
          <h3 class="font-serif text-2xl md:text-3xl font-bold mb-4 text-text group-hover:text-accent transition-colors duration-300">
            {offer.title}
          </h3>
          <p class="text-muted leading-relaxed mb-3">
            {offer.description}
          </p>
          <p class="text-muted/80 leading-relaxed mb-6 text-sm">
            {offer.details}
          </p>

          <!-- Tagi -->
          <div class="flex flex-wrap gap-2">
            {offer.tags.map((tag) => (
              <span class="px-3 py-1 text-xs tracking-wider uppercase bg-accent/8 text-accent/90 rounded-full">
                {tag}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>

    <!-- ZakljuÄni tekst -->
    <div class="text-center fade-in max-w-3xl mx-auto">
      <p class="text-muted leading-relaxed mb-8">
        {ponudba.closing}
      </p>
      <a
        href={ponudba.ctaLink}
        class="inline-flex items-center gap-3 px-8 py-3 bg-accent text-bg font-semibold rounded-sm hover:bg-accent/90 transition-all duration-300 hover:scale-105"
      >
        {ponudba.ctaText}
        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>
